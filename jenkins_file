pipeline {
       agent {
        docker {
            image 'docker.io/library/python:latest'
            args '-v $PWD:/app -w /app'
        }
    }

    stages {
        stage('GIT Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/0lhakitura/Pytest_Test_Framework.git'
            }
        }
           stages {
        stage('Python Test') {
            steps {
                sh 'python3 tests.py'
            }
        }
    }
}


