pipeline {
    agent {
        podman {
            image 'youthful_mcnulty'  // Use the desired Python version
        }
    }
    stages {
        stage('GIT Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/0lhakitura/Pytest_Test_Framework.git'
            }
        }
        stage('Test') {
            steps {
                sh 'python tests.py'
            }
        }
    }
}





