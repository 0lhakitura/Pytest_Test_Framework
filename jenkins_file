pipeline {
    agent any
    stages {
        stage('GIT Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/0lhakitura/Pytest_Test_Framework.git'
            }
        }
        stage('Test') {
agent {
                docker {
                    image 'docker.io/library/python:latest'
                    label 'youthful_mcnulty' // Replace with your agent label
                }
            }
  steps {
    sh 'python tests.py'
  }
}
    }
}





