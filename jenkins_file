pipeline {
    agent {
        node {
            label 'Built-In Node'  // Replace with your Jenkins agent label with Podman
        }
    }
    stages {
        stage('Pull Docker Image') {
            steps {
                script {
                    def imageName = 'docker.io/library/python:latest'  // Use the desired Python version
                    def podmanCmd = "podman pull $imageName"
                    sh podmanCmd
                }
            }
        }
        stage('Test') {
            steps {
                sh 'podman run -v $PWD:/app -w /app docker.io/library/python python tests.py'
            }
        }
    }
}



