pipeline {
    agent { docker { image 'python:latest' } }
  stages {
    stage('build') {
      steps {
        sh 'pip install -r requirements.txt'
      }
    }
    stages {
        stage('GIT Checkout') {
            steps {
                git changelog: false, poll: false, url: 'https://github.com/0lhakitura/Pytest_Test_Framework.git'
            }
        }
        stage('Test') {
  steps {
    sh 'python tests.py'
  }
}
    }
}





